

@*@{ 
    ViewBag.TitleNavBar = UrlData.TitleNavBar;
}*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>WebMonitoring</title>

    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/sidebarMenu.css" />
    <link rel="stylesheet" href="~/css/headerStyle.css" />

    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.8.0/dist/chart.min.js"></script>

</head>
<body>
    <header>
        <div>
            <nav class="navbar navbar-light bg-white ">
                <div>
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img id="imgKatcon" src="/images/logoKatcon.png" style="width:200px;" />
                    </a>
                    <h1 id="titleNavBar" class="text-center">@ViewBag.TitleNavBar</h1>

                </div>
            </nav>
        </div>
    </header>


    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" style="width:200px;">
            <partial name="_Menu" />
        </nav>

        @*pb-3 mr-auto ml-auto*@
        <main role="main" class="form-group">
            <div id="idLoading" class="text-center" style="visibility: hidden; display: block; margin: auto; position: absolute; top: 45%; left: 45% ">
                <span>Trwa ładowanie strony...</span><br />
                <div class="spinner-grow text-muted"></div>
                <div class="spinner-grow text-primary"></div>
                <div class="spinner-grow text-success"></div>
                <div class="spinner-grow text-info"></div>
                <div class="spinner-grow text-warning"></div>
                <div class="spinner-grow text-danger"></div>
                <div class="spinner-grow text-secondary"></div>
                <div class="spinner-grow text-dark"></div>
                <div class="spinner-grow text-light"></div>
            </div>

            @*style="position:relative; left:0px; top:0px;"*@
            <div id="renderBody">
                @RenderBody()
            </div>
        </main>


        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - WebMonitoring
            </div>
        </footer>

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <script src="https://unpkg.com/write-excel-file@1.x/bundle/write-excel-file.min.js"></script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebarMenu.js"></script>
    <script src="~/js/imgHover.js"></script>
    <script src="~/js/table2csv.js"></script>

    <script>

        function Loading() {
            var tagLoading = $('#idLoading');
            var tagBody = $('#renderBody');

            $('#titleNavBar').text('Trwa ładowanie strony...');

            //tagBody.css('visibility', 'hidden');
            if (tagBody.children.length > 0) {
                tagBody.empty();
            }
            tagLoading.css('visibility', 'visible');
        }

    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
